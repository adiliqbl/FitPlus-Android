<resources>

    <style name="Text" parent="android:TextAppearance" />

    <style name="Text.Title" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title" />
    <!--  Text Sizes  -->
    <style name="Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Text.Light" parent="Text">
        <item name="fontPath">fonts/PierSans-Light.ttf</item>
    </style>

    <style name="Text.Small.Bold" parent="Text.Small">
        <item name="fontPath">fonts/PierSans-Bold.ttf</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_smallp</item>
    </style>

    <style name="Text.Regular.Bold" parent="Text.Regular">
        <item name="fontPath">fonts/PierSans-Bold.ttf</item>
    </style>

    <style name="Text.Regular.Small" parent="Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_smallp</item>
    </style>

    <style name="Text.Large" parent="Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Text.Large.Bold" parent="Text.Large">
        <item name="fontPath">fonts/PierSans-Bold.ttf</item>
    </style>
    <!--  Button  -->
    <style name="Text.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="fontPath">fonts/PierSans-Medium.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Text.Button.Light" parent="Text.Button">
        <item name="fontPath">fonts/PierSans-Regular.ttf</item>
    </style>

    <style name="Text.Button.Colored" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/PierSans-Medium.ttf</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>
    <!--  Label  -->
    <style name="Text.Label" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontPath">fonts/PierSans-Bold.ttf</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Label.Light" parent="Text.Label">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorDefault</item>
    </style>

    <style name="FleetText" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>